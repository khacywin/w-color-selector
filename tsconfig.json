{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "module": "ES2015",
    "target": "ES6",
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "src/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}